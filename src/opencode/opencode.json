{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "instructions": [
    "agent/*.md",
    "command/*.md",
    "AGENTS.md"
  ],
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    },
    "diff_style": "auto"
  },
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "skill": "allow",
    "webfetch": "allow",
    "doom_loop": "ask",
    "external_directory": "ask"
  },
  "mcp": {
    "Figma": {
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp"
    }
  }
}
